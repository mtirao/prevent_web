<%= render PreventWeb.MenuBarView, "menu_bar.html", conn: @conn, userrole: @userrole %>

<%= if @error_type == "error" do %>
    <div class="alert alert-danger" role="alert">
        Something bad just happened. Trying again later.
    </div>
<% end %>

<div class="container mt-4 row justify-content-center align-items-center">
    <form class="form" method="POST" action="/clinic/obstetrics/new">
        <input type="hidden" name="_csrf_token" value="<%= @csrf_token %>">
        <input type="hidden" name="patient_id" value="<%= @patient_id%>">


        <!-- Psicoprofilaxis-->
        <div class="form-group">
            <label for="formGroupExampleInput2">Psicoprofilaxis: </label>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="psychoprophylaxis" value="1"  id="inlineRadio1" <%= @psychoprophylaxis %>>
                <label class="form-check-label" for="inlineRadio1">Si</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="psychoprophylaxis" value="2"  id="inlineRadio1" <%= @psychoprophylaxis %>>
                <label class="form-check-label" for="inlineRadio1">No</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="psychoprophylaxis" value="3"  id="inlineRadio1" <%= @psychoprophylaxis %>>
                <label class="form-check-label" for="inlineRadio1">Se da consejeria</label>
        </div>

        <!-- Nutritional Status -->
        <div class="form-group">
            <label for="formGroupExampleInput2">Nutritional Status: </label>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="nutritionalstatus" value="1"  id="inlineRadio1" <%= @nutritional_status %>>
                <label class="form-check-label" for="inlineRadio1">Normal</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="nutritionalstatus" value="2"  id="inlineRadio1" <%= @nutritional_status %>>
                <label class="form-check-label" for="inlineRadio1">Over weight</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="nutritionalstatus" value="3"  id="inlineRadio1" <%= @nutritional_status %>>
                <label class="form-check-label" for="inlineRadio1">Obese</label>
            </div>
             <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="nutritionalstatus" value="4"  id="inlineRadio1" <%= @nutritional_status %>>
                <label class="form-check-label" for="inlineRadio1">Under weight</label>
            </div>
        </div>
         <div class="d-flex flex-row mt-3">
            <div class="form-group mr-3">
                <label for="inlineCheckBox1">Nutritional Status Treatmeant:</label>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox"  name="nutritionalstatustreatment" value="1" id="inlineCheckBox1" <%= @nutritional_status_treatment %>>
                </div>
            </div>
        </div>

        <!-- Phisics Activity Prescription -->
        <div class="form-group">
            <label for="formGroupExampleInput2">Phisics Activity Prescription: </label>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="physicalactivityprescription" value="1"  id="inlineRadio1" <%= @physical_activity_prescription %>>
                <label class="form-check-label" for="inlineRadio1">Consejeria</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="physicalactivityprescription" value="2"  id="inlineRadio1" <%= @physical_activity_prescription %>>
                <label class="form-check-label" for="inlineRadio1">Incomplete</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="physicalactivityprescription" value="3"  id="inlineRadio1" <%= @physical_activity_prescription %>>
                <label class="form-check-label" for="inlineRadio1">Missing Data</label>
            </div>
        </div>

        <!-- Inmunization -->
        <div class="form-group">
            <label for="formGroupExampleInput2">Inmunization: </label>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="immunization" value="1"  id="inlineRadio1" <%= @immunization %>>
                <label class="form-check-label" for="inlineRadio1">Complete</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="immunization" value="2"  id="inlineRadio1" <%= @immunization %>>
                <label class="form-check-label" for="inlineRadio1">Incomplete</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="immunization" value="3"  id="inlineRadio1" <%= @immunization %>>
                <label class="form-check-label" for="inlineRadio1">Missing Data</label>
            </div>
        </div>

       <!-- Pesquisas perinatales -->
        <div class="form-group">
            <label for="formGroupExampleInput2">Pesquisas perinatales: </label>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="perinatalinvestigation" value="1"  id="inlineRadio1" <%= @perinatal_investigation %>>
                <label class="form-check-label" for="inlineRadio1">PAP</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="perinatalinvestigation" value="2"  id="inlineRadio1" <%= @perinatal_investigation %>>
                <label class="form-check-label" for="inlineRadio1">ECO</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="perinatalinvestigation" value="3"  id="inlineRadio1" <%= @perinatal_investigation %>>
                <label class="form-check-label" for="inlineRadio1">Rastreo Strepto B</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="perinatalinvestigation" value="4"  id="inlineRadio1" <%= @perinatal_investigation %>>
                <label class="form-check-label" for="inlineRadio1">ITS Tracking</label>
            </div>
        </div>

        <div class="d-flex flex-row mt-3">
            <div class="form-group mr-3">
                <label for="inlineCheckBox1">Breast Feeding</label>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox"  name="breastfeeding" value="1" id="inlineCheckBox1" <%= @breastfeeding %>>
                </div>
            </div>
        </div>

        <div class="d-flex flex-row mt-3">
            <div class="form-group mr-3">
                <label for="inlineCheckBox1">ITS Promotion</label>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox"  name="itspromotion" value="1" id="inlineCheckBox1" <%= @gits_promotion %>>
                </div>
            </div>
        </div>

        <!-- Consumo problematico -->
        <div class="form-group">
            <label for="formGroupExampleInput2">Consumo Problematico</label>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="problematicconsuption" value="1"  id="inlineRadio1" <%= @problematic_consuption %>>
                <label class="form-check-label" for="inlineRadio1">Consejeria SI</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="problematicconsuption" value="2"  id="inlineRadio1" <%= @problematic_consuption %>>
                <label class="form-check-label" for="inlineRadio1">Consume Alcohol</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="problematicconsuption" value="3"  id="inlineRadio1" <%= @problematic_consuption %>>
                <label class="form-check-label" for="inlineRadio1">Fuma</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="problematicconsuption" value="4"  id="inlineRadio1" <%= @problematic_consuption %>>
                <label class="form-check-label" for="inlineRadio1">Otra</label>
            </div>
        </div>

        <div class="form-check form-check-inline mt-5">
            <button type="submit" class="btn btn-primary">
                Save
            </button>
        </div>

    </form>
</div>
